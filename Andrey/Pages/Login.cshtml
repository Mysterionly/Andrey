@page
@model Andrey.Pages.LoginModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div>
    <h4>User</h4>
    <hr />
        <form method="post">
            <div class="form-group">
                <label class="control-label" asp-for="uData.User.Login"></label>
                <input type="text" asp-for="uData.User.Login" />
                <span asp-validation-for="uData.User.Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="uData.User.Password" class="control-label" ></label>
                <input type="password" asp-for="uData.User.Password" class="form-control" />
                <span asp-validation-for="uData.User.Password" class="text-danger"></span>
            </div>
            <div>
                <input type="submit" value="Пустите меня!" class="btn btn-primary" />
            </div>
        </form>
    <hr />
</div>

