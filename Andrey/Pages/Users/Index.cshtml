@model Andrey.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Пользователи";
}

@if (Model.User != null)
{

<h1>Пользователи</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <!--
            <th>
                @Html.DisplayNameFor(model => model.User[0].Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].MidName)
            </th>
            -->
            <th>
                @Html.DisplayNameFor(model => model.User[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model.User)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MidName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Login)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.UserID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.UserID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.UserID">Delete</a>
                    </td>
                </tr>
            }
    </tbody>
</table>
