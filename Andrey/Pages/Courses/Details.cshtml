@page
@model Andrey.Pages.Courses.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Teacher)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Teacher.TeacherID)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Course.CourseID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Урок
            </th>
            <th>
                Дата
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@if (Model.Course.Lessongs != null) {
foreach (var item in Model.Course.Lessongs) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                <a asp-page="/Lessongs/Edit" asp-route-id="@item.LessongID">Edit</a> |
                <a asp-page="/Lessongs/Details" asp-route-id="@item.LessongID">Details</a> |
                <a asp-page="/Lessongs/Delete" asp-route-id="@item.LessongID">Delete</a>
            </td>
        </tr>
        }
}
    </tbody>
</table>
