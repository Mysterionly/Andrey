@page
@model Andrey.Pages.Teachers.EditModel

@{
    ViewData["Title"] = "Редактировать информацию о учителе";
}

<h1>Редактировать данные о учителе</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Teacher.TeacherID" />
            <div class="form-group">
                <label>Пользователь</label>
                <select asp-for="Teacher.UserID" class="form-control" asp-items="ViewBag.UserID"></select>
                <span asp-validation-for="Teacher.UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Информация о учителе</label>
                <input asp-for="Teacher.Description" class="form-control" />
                <span asp-validation-for="Teacher.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">К списку учителей</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
